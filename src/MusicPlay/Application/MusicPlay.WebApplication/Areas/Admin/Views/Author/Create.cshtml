@model Author;

<form asp-area="Admin" asp-controller="Author" asp-action="Create" method="POST">

    <div class="form-group">
        <label asp-for="@Model.Names"></label>
        <input class="form-control" asp-for="@Model.Names" />
        <span asp-validation-for="Names"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Birthday"></label>
        <input class="form-control" asp-for="@Model.Birthday" type="date" />
        <span asp-validation-for="Birthday"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.IsAlive"></label>
        <input class="form-control" asp-for="@Model.IsAlive" />
        <span asp-validation-for="IsAlive"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
