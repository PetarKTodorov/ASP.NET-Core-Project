
@model Song;

<form asp-area="Admin" asp-controller="Song" asp-action="Delete" method="POST">

    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input class="form-control" readonly asp-for="@Model.Name" value="@Model.Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.RelaseDate"></label>
        <input class="form-control" readonly asp-for="@Model.RelaseDate" type="date" value="@Model.RelaseDate.ToString("yyyy-MM-dd")"  />
        <span asp-validation-for="RelaseDate"></span>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}